{
	auto_https off
	ocsp_stapling off #we don't need to revoke our own certificates here
	log default {
		output stdout
		level DEBUG
	}
}


siteAB.org {
	tls /keys/siteAB.crt /keys/siteAB.pem {
	#	client_auth {
	#		mode require_and_verify #this is super important!! (not default even if trust pool is given)
	#		trust_pool file {
	#			pem_file /keys/user_ca_b.pem
	#		}
	#	}
	}

	handle /a {
		respond "hello from the other siteA"
	}

	handle /b {
		respond "hello from the other siteB"
	}

	handle {
		respond 404
	}
}

:80 :443 { # everything else
	handle {
		respond 404
	}
}

:80 :443 { # everything else
	handle {
		respond 404
	}
}