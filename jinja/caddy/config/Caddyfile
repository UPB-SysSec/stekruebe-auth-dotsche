{
	auto_https off
	ocsp_stapling off #we don't need to revoke our own certificates here
	log default {
		output stdout
		level DEBUG
	}
}

a.com {
	tls /keys/siteA.crt /keys/siteA.key {
		client_auth {
			mode require_and_verify
			trust_pool file {
				pem_file /keys/user_ca_a.pem
			}
		}
	}

	handle {
		respond "You have been served A."
	}
}

b.com {
	tls /keys/siteB.crt /keys/siteB.key {
		client_auth {
			mode require_and_verify
			trust_pool file {
				pem_file /keys/user_ca_b.pem
			}
		}
	}

	handle {
		respond "You have been served B."
	}
}

:80 :443 {
	# everything else
	handle {
		respond 404
	}
}
